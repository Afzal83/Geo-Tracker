<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#368ef8"
    android:visibility="visible">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_marginLeft="15dp"
        android:background="#368ef8"
        android:orientation="vertical">
        <TextView
            android:id="@+id/vehicle_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a Vehicle"
            android:textSize="18dp"
            android:textColor="@color/white"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/location_image"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_below="@id/vehicle_id"
            android:layout_marginEnd="10dp"

            android:textSize="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/vehicle_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vehicle_id"
            android:layout_toEndOf="@id/location_image"
            android:layout_alignBottom="@id/location_image"
            android:text="Mirpur-2,Dhaka"
            android:textSize="12dp"
            android:textColor="@color/white"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="8">
        <View
            android:id="@+id/div1"
            android:layout_width="280dp"
            android:layout_height="0.1px"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:background="@color/white"/>
        <LinearLayout
            android:id="@+id/ll_speed"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_below="@id/div1"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Engine"
                android:textSize="12dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/engine_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location_image"
                android:text="ON"
                android:textSize="20dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <View
            android:id="@+id/div01"
            android:layout_width="0.1px"
            android:layout_height="wrap_content"
            android:layout_below="@id/div1"
            android:layout_toEndOf="@id/ll_speed"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"/>
        <LinearLayout
            android:id="@+id/ll_engine"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/div01"
            android:orientation="vertical"
            android:layout_below="@id/div1"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AC"
                android:textSize="12dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off"
                android:textSize="20dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <View
            android:id="@+id/div02"
            android:layout_width="0.1px"
            android:layout_height="wrap_content"
            android:layout_below="@id/div1"
            android:layout_toEndOf="@id/ll_engine"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"/>
        <RelativeLayout
            android:id="@+id/ll_ac"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_below="@id/div1"
            android:layout_toEndOf="@id/div02"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/speed_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Engine"
                android:textSize="12dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/speed_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/speed_h"
                android:text="80"
                android:textSize="20dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/speed_h"
                android:layout_toEndOf="@id/speed_status"
                android:layout_alignBaseline="@id/speed_status"
                android:layout_marginLeft="5dp"
                android:text="km/h"
                android:textSize="10dp"
                android:textColor="@color/white"/>
        </RelativeLayout>
        <View
            android:id="@+id/div3"
            android:layout_width="280dp"
            android:layout_height="0.1px"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"/>
    </RelativeLayout>

</LinearLayout>


